{
  "name": "portfolio-react",
  "version": "0.2.0",
  "private": true,
  "homepage": "https://dallasopelt.dev/",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "debug": "npm i --no-save && react-scripts start",
    "start": "react-scripts start",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build --branch=master",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:ts": "eslint './src/**/*.{ts,tsx}'",
    "lint:ts:fix": "npm run lint:ts -- --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run --silent lint:ts:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint:ts"
    }
  }
}
